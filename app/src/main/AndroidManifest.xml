<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pro1221_android_petshopmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRO1221_Android_PetShopManagement">
        <activity
            android:name=".screen.activity.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement.NoActionBar" />
        <activity
            android:name=".screen.activity.LauncherScreen"
            android:exported="true"
            android:label="@string/title_activity_launcher_screen"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement.NoActionBar"></activity>
    </application>

</manifest>
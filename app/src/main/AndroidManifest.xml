<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pro1221_android_petshopmanagement">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".PetShopApp"
        android:allowBackup="false"
        android:icon="@drawable/sample_doge_img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sample_doge_img"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRO1221_Android_PetShopManagement">
        <activity
            android:name=".presentation.activity.AccountActivity"
            android:exported="false"
            android:label="@string/title_activity_account"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement.NoActionBar" />
        <activity
            android:name=".presentation.activity.LauncherScreen"
            android:exported="true"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.PRO1221_Android_PetShopManagement.NoActionBar"
            tools:ignore="LockedOrientationActivity,RedundantLabel" />
    </application>

</manifest>